<?xml version="1.0" encoding="utf-8" ?>
<rxui:ReactiveContentPage x:Class="ThreadingApp.MainPage"
                          xmlns="http://xamarin.com/schemas/2014/forms"
                          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
                          xmlns:local="clr-namespace:ThreadingApp"
                          xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
                          ios:Page.UseSafeArea="true"
                          x:TypeArguments="local:MainPageViewModel">

    <StackLayout>
        <Button x:Name="SubscribeOnCommandOutputButton" Text="SubscribeOn Command Output" />
        <Button x:Name="SubscribeOnInnerChainButton" Text="SubscribeOn Inner Chain" />
        <Button x:Name="InvokeCommandButton" Text="Invoke Command observing TaskPool" />
        <Button x:Name="ClearButton" Text="Clear" />
        <Label x:Name="OutputLabel"
               FontSize="Small"
               LineBreakMode="WordWrap"
               VerticalOptions="FillAndExpand" 
               TextColor="DarkSlateGray"/>
    </StackLayout>

</rxui:ReactiveContentPage>
